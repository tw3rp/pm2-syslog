{
  "name": "pm2-syslog2",
  "version": "2.2.5",
  "description": "Redirect PM2/apps logs to syslog",
  "main": "probe.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "ain2": "^2.0.0",
    "pm2": "^2.5.0",
    "pmx": "latest"
  },
  "apps": [
    {
      "name": "pm2-syslog",
      "script": "index.js"
    }
  ],
  "author": "Alexandre Strzelewicz",
  "license": "MIT",
  "config": {
      "tag": "pm2",
      "facility": "user",
      "hostname": "localhost",
      "transport": "UDP",
      "path": "/dev/log",
      "port": 514,
      "format": "text"
  }
}
